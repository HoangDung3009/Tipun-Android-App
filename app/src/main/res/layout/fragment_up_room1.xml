<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.up_room1">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--        android:scrollbars="vertical">-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="20dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/up_room1">
                </ImageView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thông tin phòng"
                    android:textColor="#090808"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Loại phòng"
                    android:textColor="#0E0E0E">

                </TextView>

                <RadioGroup
                    android:id="@+id/postroom_roomType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Phòng ở ghép">

                    </RadioButton>

                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Nhà nguyên căn">

                    </RadioButton>

                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Căn hộ">

                    </RadioButton>

                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Nhà cho thuê">

                    </RadioButton>

                </RadioGroup>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sức chứa"
                    android:textColor="#0E0E0E">

                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <EditText
                        android:id="@+id/postroom_capacity"
                        android:layout_width="262dp"
                        android:layout_height="50dp"
                        android:inputType="number"
                        android:textColor="#0C0C0C"
                        android:textSize="18sp"
                        tools:ignore="SpeakableTextPresentCheck">

                    </EditText>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="người"
                        android:textColor="#090909">

                    </TextView>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Giới tính"
                    android:textColor="#0E0E0E">

                </TextView>

                <RadioGroup
                    android:id="@+id/postroom_genderAllow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Tất cả">

                    </RadioButton>

                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Nam">

                    </RadioButton>

                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Nữ">

                    </RadioButton>

                </RadioGroup>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DIện tích"
                    android:textColor="#0E0E0E">

                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <EditText
                        android:id="@+id/postroom_acreage"
                        android:layout_width="262dp"
                        android:layout_height="50dp"
                        android:inputType="number"
                        android:textColor="#090909"
                        android:textSize="18sp"
                        tools:ignore="SpeakableTextPresentCheck">

                    </EditText>

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="m2"
                        android:textColor="#090909">

                    </TextView>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chi phí"
                    android:textColor="#0E0E0E">

                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/postroom_price"
                        android:layout_width="262dp"
                        android:layout_height="50dp"
                        android:textColor="#090909"
                        android:textSize="18sp"
                        android:inputType="number"
                        tools:ignore="SpeakableTextPresentCheck"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="48dp"
                        android:text="VNĐ/phòng"
                        android:textColor="#090909">

                    </TextView>

                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tiền điện"
                    android:textColor="#0E0E0E">

                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/postroom_electricPrice"
                        android:layout_width="230dp"
                        android:layout_height="50dp"
                        android:inputType="number"
                        android:textColor="#090909"
                        android:textSize="18sp"
                        tools:ignore="SpeakableTextPresentCheck">

                    </EditText>

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="VNĐ"
                        android:textColor="#090909">

                    </TextView>

                    <CheckBox
                        android:id="@+id/postroom_freeElectric"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Miễn phí"/>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tiền nước"
                    android:textColor="#0E0E0E">

                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/postroom_waterPrice"
                        android:layout_width="230dp"
                        android:layout_height="50dp"
                        android:inputType="number"
                        android:textColor="#090909"
                        android:textSize="18sp"
                        tools:ignore="SpeakableTextPresentCheck">

                    </EditText>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="VNĐ"
                        android:textColor="#090909">

                    </TextView>

                    <CheckBox
                        android:id="@+id/postroom_freeWater"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Miễn phí"/>

                </LinearLayout>

                <Button
                    android:id="@+id/postroom_btn1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="#FFFFFF"
                    android:gravity="center"
                    android:text="Tiếp theo >"
                    android:textColor="#3F51B5">

                </Button>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</FrameLayout>