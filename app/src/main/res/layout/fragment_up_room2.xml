<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.up_room2">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/up_room2">

        </ImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="10dp"
            android:text="Địa chỉ"
            android:textSize="20sp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thành phố">

        </TextView>

        <EditText
            android:id="@+id/postroom_city"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            tools:ignore="SpeakableTextPresentCheck"
            android:inputType="text">


        </EditText>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quận/Huyện">

        </TextView>

        <EditText
            android:id="@+id/postroom_district"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            tools:ignore="SpeakableTextPresentCheck"
            android:inputType="text">

        </EditText>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phường/Xã">

        </TextView>

        <EditText
            android:id="@+id/postroom_commune"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            tools:ignore="SpeakableTextPresentCheck"
            android:inputType="text">

        </EditText>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Địa chỉ">

        </TextView>

        <EditText
            android:id="@+id/postroom_address"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:textColor="#0B0A0A"
            android:textSize="18sp"
            tools:ignore="SpeakableTextPresentCheck"
            android:inputType="text">

        </EditText>

        <Button
            android:id="@+id/postroom_btn2"
            android:layout_width="168dp"
            android:layout_height="62dp"
            android:layout_marginLeft="115dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#FFFFFF"
            android:gravity="center"
            android:text="Tiếp theo >"
            android:textColor="#3F51B5">

        </Button>

    </LinearLayout>

</FrameLayout>